# Production Environment Variables
NODE_ENV=production

# Server Configuration
PORT=5000 # Production servers often use a different port
CLIENT_URL=https://www.your-enigmalink-domain.com

# MongoDB Configuration (Use a production connection string, e.g., from MongoDB Atlas)
MONGO_URI=mongodb+srv://<prod_user>:<prod_password>@yourcluster.mongodb.net/enigmalink_prod?retryWrites=true&w=majority

# Security (Generate strong, random secrets for production)
JWT_SECRET=GENERATE_A_VERY_STRONG_RANDOM_SECRET_FOR_PRODUCTION
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=GENERATE_A_DIFFERENT_STRONG_RANDOM_REFRESH_SECRET
JWT_REFRESH_EXPIRES_IN=30d